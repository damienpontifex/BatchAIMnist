{
  "$schema":
    "https://raw.githubusercontent.com/Azure/BatchAI/schema/schemas/2017-09-01-preview/job.json",
  "properties": {
    "experimentName": "MNIST Train",
    "nodeCount": 3,
    "tensorFlowSettings": {
      "pythonScriptFilePath": "$AZ_BATCHAI_INPUT_SCRIPT/mnist.py",
      "masterCommandLineArgs":
        "--data-directory $AZ_BATCHAI_INPUT_DATA --model-directory $AZ_BATCHAI_MOUNT_ROOT/bfs/mnist/model",
      "workerCommandLineArgs":
        "--data-directory $AZ_BATCHAI_INPUT_DATA --model-directory $AZ_BATCHAI_MOUNT_ROOT/bfs/mnist/model",
      "parameterServerCommandLineArgs":
        "--data-directory $AZ_BATCHAI_INPUT_DATA --model-directory $AZ_BATCHAI_MOUNT_ROOT/bfs/mnist/model"
    },
    "stdOutErrPathPrefix": "$AZ_BATCHAI_MOUNT_ROOT/bfs/mnist/stderr",
    "inputDirectories": [
      {
        "id": "SCRIPT",
        "path": "$AZ_BATCHAI_MOUNT_ROOT/bfs/mnist/train"
      },
      {
        "id": "DATA",
        "path": "$AZ_BATCHAI_MOUNT_ROOT/bfs/mnist/data"
      }
    ],
    "containerSettings": {
      "imageSourceRegistry": {
        "image": "tensorflow/tensorflow:1.7.0-gpu-py3"
      }
    }
  }
}
